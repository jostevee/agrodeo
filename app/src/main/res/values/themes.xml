        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="Theme.Agrodeo.PoppinsMedium" parent="Theme.Agrodeo">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.Agrodeo.ActionBar" parent="Theme.Agrodeo">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Theme.Agrodeo.ActionBar.Poppins" parent="Theme.Agrodeo.ActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.Agrodeo.NoActionBar" parent="Theme.Agrodeo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Agrodeo.NoActionBar.Poppins" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
