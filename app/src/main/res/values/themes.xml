    <style name="Theme.Agrodeo.NoActionBar.PoppinsMedium" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="Theme.Agrodeo.NoActionBar.PoppinsLight" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins_light</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
