<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agrodeo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- FIRST DESIGN
            Primary brand color.
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
            Secondary brand color.
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            Status bar color.
            <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
             Customize your theme here.-->

        <!-- Customize your theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryVariant">#4CAF50</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="Theme.Agrodeo.Poppins" parent="Theme.Agrodeo">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="Theme.Agrodeo.PoppinsLight" parent="Theme.Agrodeo">
        <item name="android:fontFamily">@font/poppins_light</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="Theme.Agrodeo.PoppinsSemiBold" parent="Theme.Agrodeo">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="Theme.Agrodeo.PoppinsBold" parent="Theme.Agrodeo">
