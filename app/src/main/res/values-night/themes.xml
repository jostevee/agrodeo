<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agrodeo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- FIRST DESIGN
            Primary brand color.
            <item name="colorPrimary">@color/purple_200</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/black</item>
            Secondary brand color.
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_200</item>
            <item name="colorOnSecondary">@color/black</item>
            Status bar color.
            <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
            Customize your theme here.
        -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorPrimaryDark">@color/darkest_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/green_primary</item>
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>

        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
    </style>

    <!-- Customize your theme here. -->
    <style name="Theme.Agrodeo.ActionBar" parent="Theme.Agrodeo">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Theme.Agrodeo.ActionBar.Poppins" parent="Theme.Agrodeo.ActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.Agrodeo.NoActionBar" parent="Theme.Agrodeo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="Theme.Agrodeo.NoActionBar.Poppins" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="Theme.Agrodeo.NoActionBar.PoppinsMedium" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="Theme.Agrodeo.NoActionBar.PoppinsLight" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins_light</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_light</item>
    </style>
    <style name="Theme.Agrodeo.NoActionBar.PoppinsBold" parent="Theme.Agrodeo.NoActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.Agrodeo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Agrodeo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavDrawerItemAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>
</resources>